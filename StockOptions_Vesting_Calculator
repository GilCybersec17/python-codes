#Stock Options | Exercise price of $239 | Vesting 83 stocks

print()
print(f"Welcome back Gil! Let's calculate your possible stock valuable base on stock prices.\n")

def calculate_current_price():
    CURRENT_STOCK_PRICE = int(input(f'How much is the stock price? '))
    STOCK_QTY_TO_SELL = int(input(f'How many stocks are you planning to sell? '))

    EXERCISE_PRICE = int(239)
    STOCK_VALUE = CURRENT_STOCK_PRICE * 83
    EXERCISE_PRICE_TOTAL = EXERCISE_PRICE * 83
    TAX_DEDUCTION_15 = 0.85
    AFTER_TAX_VALUE = STOCK_VALUE * TAX_DEDUCTION_15
    PROFIT = STOCK_VALUE - EXERCISE_PRICE_TOTAL

    if CURRENT_STOCK_PRICE >= EXERCISE_PRICE:
        print(f'You can get ${round(STOCK_VALUE)}, which is ${round(AFTER_TAX_VALUE)} after 15% tax deduction if you sell it! (${PROFIT} profit).\n\n')
    else:
        print(f'You will get $0 if you sell it due to the current stock price is below your $239.20 exercise price!\n\n')

while True:
    calculate_current_price()
